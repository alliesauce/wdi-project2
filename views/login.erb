<div class='row'>
  <div class='twelve columns'>
    <% if !correct_password %>
      <!-- <p>Your login details are incorrect. Please try again.</p> -->
      <div class="container">
        <h1>Sign In</h1>
        <form class='signup' action='/login' method='post'>
          <label for='email'>Email: </label>
          <input name='email' type='text' />
          <br />
          <label for='password'>Password: </label>
          <input name='password' type='password' />
          <br />
          <input type='submit' value='Log In' />
        </form>
        <p>Not yet a member? <a href='/signup' text='Join here.'>Join here.</a></p>
      </div>
    <% else %>
      <div class="container">
        <h1>Sign In</h1>
        <form class='signup' action='/login' method='post'>
          <label for='email'>Email: </label>
          <input name='email' type='text' />
          <br />
          <label for='password'>Password: </label>
          <input name='password' type='password' />
          <br />
          <input type='submit' value='Log In' />
        </form>
        <p>Not yet a member? <a href='/signup' text='Join here.'>Join here.</a></p>
      </div>
    <% end %>
  </div>
</div>


